FROM aursu/rpmbuild:7-build

USER root
RUN yum -y install \
        bzip2-devel \
        cyrus-sasl-devel \
        freetype-devel \
        gdbm-devel \
        httpd-devel \
        libacl-devel \
        libcurl-devel \
        libdb-devel \
        libffi-devel \
        libicu-devel \
        libjpeg-turbo-devel \
        libpng-devel \
        libsodium-devel \
        libtool-ltdl-devel \
        libwebp-devel \
        libxml2-devel \
        libxslt-devel \
        mysql-devel \
        nginx-filesystem \
        oniguruma-devel \
        openldap-devel \
        openssl-devel \
        pcre2-devel \
        postgresql-devel \
        sendmail \
        sqlite-devel \
        systemd-devel \
        systemtap-sdt-devel \
        unixODBC-devel \
        uw-imap-devel \
        zlib-devel \
    && yum clean all && rm -rf /var/cache/yum

RUN yum -y --disablerepo=* --enablerepo=bintray-custom install \
        "libzip-devel >= 1.5.1" \
    && yum clean all && rm -rf /var/cache/yum
